<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> front exercice iteatime </title>

  @vite(['resources/css/app.scss', 'resources/js/app.js'])
</head>
<body>
  <div id="menu_items">
    <div class="items">
      <li class="menu_item">Introduction</li>
      <li class="menu_item">Boutique</li>
      <li class="menu_item">Partenaires</li>
      <li class="menu_item">L'équipe</li>
    </div>
  </div>

  <div id="header">
    <div id="dropdown_icon">
      @svg('ph:list')
    </div>
    <div id="logo"></div>
    <div id="contacts">
      <div id="mail">
        @svg('ph:mailbox-fill')
        Contactez-nous
      </div>
      <div id="social_networks">
        <div id="facebook">
          @svg('ph:facebook-logo-fill')
        </div>
        <div id="linkedin">
          @svg('ph:linkedin-logo-fill')
        </div>
        <div id="twitter">
          @svg('ph:twitter-logo-fill')
        </div>
        <div id="tumblr">
          @svg('ph:tumblr-logo-fill')
        </div>
        <div id="youtube">
          @svg('ph:youtube-logo-fill')
        </div>
      </div>   
    </div>
  </div>

  <div id="header2">
    <img class="background_image" />
    <div id="navbar_background">
      <div id="navbar">
        <div id="tab1" class="tab active">Introduction</div>
        <div id="tab2" class="tab">Boutique</div>
        <div id="tab3" class="tab">Partenaires</div>
        <div id="tab4" class="tab">L'équipe</div>
        <div id="searchbar">
          <input type="text">
          @svg('ph:magnifying-glass-bold')
        </div>
      </div>
    </div>
    <div id="background_title">
      <span>Le premier site</span>
      <span>De jeux de sociétés</span>
    </div>
  </div>

  <div id="spotlight">
    <div class="section_header">
      <div class="title">à la une</div>
      <div class="separator"></div>
    </div>
    @each(spotlight in spotlightsList)
      <div class="item">
        <div class="image">
          <div class="background_image"></div>
          <div class="description">
            <div class="date">{{spotlight.date_formated}}</div>
            <div class="title">{{html.safe(spotlight.title)}}</div>
          </div>
        </div>
        <div class="content">
          {{spotlight.description}}
        </div>
      </div>
    @end
  </div>

  <div id="paralax"></div>

  <div id="news">
    <div class="section_header">
      <div class="title">actualités</div>
      <div class="separator"></div>
    </div>
    <div class="item_group">
      @each((news, index) in newsList)
        <div class="item">
          <div class="image" id="{{index == 0 ? 'first' : 'second'}}"></div>
          <div class="tag_group">
            <div class="tags">{{news.date_formated}}</div>
            <div class="tags">actualités</div>
          </div>
          <div class="title">{{news.title}}</div>
          <div class="description">{{news.description}}</div>
          <button type="button">lire plus</button>
        </div>
      @end
    </div>
  </div>

  <div id="brands">
    <div class="section_header">
      <div class="title">les jeux de sociétés</div>
      <div class="separator"></div>
    </div>
    <div class="hexagone_content">
      <div class="hexagones">
        <div class="hexagone" id="boardgame1">
          <div class="hover_hex">
            <div class="content">
              <div class="title">abraca</div>
              <div class="divider"></div>
              <div class="description">Jeux de coopération</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame2">
          <div class="hover_hex">
            <div class="content">
              <div class="title">goudurox</div>
              <div class="divider"></div>
              <div class="description">Jeux de survie</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame3">
          <div class="hover_hex">
            <div class="content">
              <div class="title">track</div>
              <div class="divider"></div>
              <div class="description">Jeux de cartes</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame4">
          <div class="hover_hex">
            <div class="content">
              <div class="title">sabra</div>
              <div class="divider"></div>
              <div class="description">Deck building</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame5">
          <div class="hover_hex">
            <div class="content">
              <div class="title">miroir</div>
              <div class="divider"></div>
              <div class="description">Coopération</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame6">
          <div class="hover_hex">
            <div class="content">
              <div class="title">virolt</div>
              <div class="divider"></div>
              <div class="description">Jeu de stratégie</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame7">
          <div class="hover_hex">
            <div class="content">
              <div class="title">partis</div>
              <div class="divider"></div>
              <div class="description">Deck building</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame8">
          <div class="hover_hex">
            <div class="content">
              <div class="title">prolis</div>
              <div class="divider"></div>
              <div class="description">Party game</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
        <div class="hexagone" id="boardgame9">
          <div class="hover_hex">
            <div class="content">
              <div class="title">noira</div>
              <div class="divider"></div>
              <div class="description">Jeu de cartes</div>
            </div>
            <div class="background"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="other">
    <div id="documentation">
      <div class="title">documentation</div>
      <div id="item_list">
        <div class="item">
          <div class="icon">
            @svg('ph:file-arrow-down-fill')
          </div>
          <div class="name">telechargez le livret de règles</div>
        </div>
        <div class="item">
          <div class="icon">
            @svg('ph:file-arrow-down-fill')
          </div>
          <div class="name">téléchargez la liste de nos magasins partenaires</div>
        </div>
      </div>
    </div>
    <div id="newsletter">
      <div class="title">newsletter</div>
      <div id="form">
        <input type="email" id="mail" name="mail" placeholder="EMAIL">
        <div class="personnal_info">
          <input type="text" id="lname" name="lastname" placeholder="NOM">
          <input type="text" id="firstname" name="firstname" placeholder="PRENOM">
        </div>
      </div>
      <button type="button">s'inscrire</button>
    </div>
  </div>

  <div id="social_networks_footer">
    <div class="social_network">
      <div class="icon">
        @svg('ph:facebook-logo-fill')
      </div>
      <div class="name">Facebook</div>
    </div>
    <div class="social_network">
      <div class="icon">
        @svg('ph:twitter-logo-fill')
      </div>
      <div class="name">Twitter</div>
    </div>
    <div class="social_network">
      <div class="icon">
        @svg('ph:linkedin-logo-fill')
      </div>
      <div class="name">Linkedin</div>
    </div>
    <div class="social_network">
      <div class="icon">
        @svg('ph:youtube-logo-fill')
      </div>
      <div class="name">Youtube</div>
    </div>
    <div class="social_network">
      <div class="icon">
        @svg('ph:tumblr-logo-fill')
      </div>
      <div class="name">Tumblr</div>
    </div>
  </div>

  <div id="footer">
    <div class="section_list">
      <div class="section">
        <div class="title">Soutenez les jeux de société</div>
        <div class="button">
          <button type="button">faire un don</button>
        </div>
      </div>
      <div class="section">
        <div class="title_content">
          <div class="title">initiative portée par :</div>
          <div class="divider"></div>
        </div>
        <div class="logo"></div>
      </div>
      <div class="section">
        <div class="title_content">
          <div class="title">rubriques</div>
          <div class="divider"></div>
        </div>
        <div class="links">
          <div class="link">La gamme expert</div>
          <div class="link">La gamme famille</div>
          <div class="link">La gamme enfant</div>
          <div class="link">La gamme duo</div>
          <div class="link">Autre</div>
        </div>
      </div>
      <div class="section">
        <div class="title_content">
          <div class="title">youtube</div>
          <div class="divider"></div>
        </div>
        <div class="thumbnails">
          <div id="youtubeur1" class="thumbnail"></div>
          <div id="youtubeur2" class="thumbnail"></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
